  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch server",
      "sourceMaps": true,
      "smartStep": true,
      "cwd": "${workspaceFolder}/server",
      "skipFiles": ["<node_internals>/**"],
      "program": "${cwd}/server/src/server.ts",
      "preLaunchTask": "tsc: build - server/tsconfig.json",
      "outFiles": ["${cwd}/server/dist/**/*.js"]
    }
  ]
}
